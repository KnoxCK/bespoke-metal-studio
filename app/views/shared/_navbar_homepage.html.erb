    <div class="social-links hidden-xs hidden-sm">
      <p><%= link_to "FACEBOOK", "https://www.facebook.com/", class: "social-link" %></p>
      <p><%= link_to "TWITTER", "https://www.twitter.com/", class: "social-link" %></p> 
