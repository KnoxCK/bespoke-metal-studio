<div class="navbar-bms navbar-bms-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-bms-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- main Navigation -->
  <div class="navbar-bms-main hidden-xs hidden-sm">

<!-- Navbar menu -->
    <!-- About link -->
    <%= link_to "ABOUT US", root_path(:anchor => "#"), class: "navbar-bms-link" %>
  <!-- Our Story link -->
    <%= link_to "PRODUCTS", root_path(:anchor => "#"), class: "navbar-bms-link" %>
    <!-- Services link -->
    <%= link_to "SERVICES", root_path(:anchor => "#"), class: "navbar-bms-link" %>
    <!-- Our Team link -->
    <%= link_to "THE TEAM", root_path(:anchor => "#"), class: "navbar-bms-link" %>
    <!-- Happy People link -->
    <%= link_to "CONTACT", root_path(:anchor => "#"), class: "navbar-bms-link" %>
