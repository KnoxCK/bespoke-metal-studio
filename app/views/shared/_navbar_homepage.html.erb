<div class="navbar-bms-homepage navbar-bms-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-bms-brand-homepage" do %>
    <%= image_tag "logo_1.png" %>
  <% end %>

  <!-- main Navigation -->
  <div class="navbar-bms-main-homepage hidden-xs hidden-sm">

<!-- Navbar menu -->
    <!-- About Us link -->
    <h4><%= link_to "ABOUT US", about_path, class: "navbar-bms-link" %></h4>
    <!-- Products link -->
    <h4><%= link_to "PRODUCTS", products_path(:anchor => "products"), class: "navbar-bms-link" %></h4>
    <!-- Services link -->
    <h4><%= link_to "SERVICES", services_path, class: "navbar-bms-link" %></h4>
    <!-- The Team link -->
    <h4><%= link_to "THE TEAM", team_path(:anchor => "team"), class: "navbar-bms-link" %></h4>
    <!-- Contact link -->
    <h4><%= link_to "CONTACT", contact_path, class: "navbar-bms-link" %></h4>
  </div>
  <!-- Social links -->
  <div class="social-links-homepage hidden-xs hidden-sm">
    <p><%= link_to "https://www.instagram.com/bespokemetalstudio/", class: "social-link", target: "blank" do %>
       <i class="fa fa-instagram"></i>
       <% end %></p>
    <p><%= link_to "https://uk.pinterest.com/bespokemetal/", class: "social-link", target: "blank" do %>
      <i class="fa fa-pinterest"></i>
      <% end %>
    </p> 
  </div>  



      
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-bms-item hidden-md hidden-lg">
      <div class="dropdown dropdown-toggle-black"> 
        <a class="fa fa-bars dropdown-toggle" data-toggle="dropdown" href="#"></a>
        <ul class="dropdown-menu dropdown-menu-main .navbar-bms-dropdown-menu">
          <li><%= link_to "ABOUT US", about_path, class: "navbar-bms-link" %></li>  
          <li><%= link_to "PRODUCTS", products_path, class: "navbar-bms-link" %></li>  
          <li><%= link_to "SERVICES", services_path, class: "navbar-bms-link" %></li>  
          <li><%= link_to "THE TEAM", team_path, class: "navbar-bms-link" %></li>  
          <li><%= link_to "CONTACT", contact_path, class: "navbar-bms-link" %></li>
          <li><%= link_to "INSTAGRAM", "https://www.instagram.com/", class: "navbar-bms-link", target: "blank" %></li>  
          <li><%= link_to "PINTEREST", "https://www.pinterest.com/", class: "navbar-bms-link", target: "blank" %></li>
        </ul>
      </div>
  </div>
</div>


